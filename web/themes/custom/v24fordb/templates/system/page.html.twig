<div class="container" id="container">
  <header aria-label="Site header" class="header" id="header" role="banner">
    <div class="top--header">
      {{ page.top_header }}
    </div>
    <div class="bottom--header">
      {{ page.bottom_header }}
    </div>
    <div class="main--navigation">
      {{ page.navigation }}
    </div>
  </header>
  <section class="main" id="main">
    {% if page.left_sidebar is not empty %}
      <div class="main-flexgrow">
        <aside class="left--sidebar" id="left-sidebar" role="complementary">
          {{ page.left_sidebar }}
        </aside>
      </div>
    {% else %}
      <div class="main-flexgrow" style="display: none;">
        <aside class="left--sidebar" id="left-sidebar" role="complementary">
          {{ page.left_sidebar }}
        </aside>
      </div>
    {% endif %}
    <div class="main-flexgrow">
      <main aria-label="Site main content" class="content" id="content" role="main">
        {{ page.content }}
      </main>
    </div>
    <div class="main-flexgrow">
      <aside class="right--sidebar" id="right-sidebar" role="complementary">
        {{ page.right_sidebar }}
      </aside>
    </div>
  </section>
  <footer aria-label="Site footer" class="footer" id="footer" role="contentinfo">
    <div class="top--footer">
      {{ page.top_footer }}
    </div>
    <div class="bottom--footer">
      {{ page.bottom_footer }}
    </div>
  </footer>
</div>
